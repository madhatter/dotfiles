out_to_x no
out_to_console yes
update_interval 2.0
if_up_strictness address

background yes
use_xft yes

TEXT
${if_mpd_playing}${execi 10000 echo -e "\x01"}${mpd_artist}${execi 10000 echo -e "\x02"}${mpd_title} ${endif}\
${execi 10000 echo -e "\x01"}Cpu${execi 10000 echo -e "\x01"}${if_match ${cpu} < 10}0.0${cpu}${else}${if_match ${cpu} < 99}0.${cpu}${else}${if_match ${cpu} = 100}1.00${endif}${endif}${endif} \
${execi 10000 echo -e "\x01"}Mem${execi 10000 echo -e "\x01"}${if_match ${memperc} < 10}0.0${memperc}${else}${if_match ${memperc} < 99}0.${memperc}${else}${if_match ${memperc} = 100}1.00${endif}${endif}${endif} \
${execi 10000 echo -e "\x01"}Bat${execi 10000 echo -e "\x01"}${battery_percent} \
${execi 10000 echo -e "\x01"}Net${execi 10000 echo -e "\x01"}${if_up eth1}${wireless_link_qual_perc eth1}${else}${if_up eth0}On${else}No${endif}${endif} \
${execi 10000 echo -e "\x01"}Pac${execi 10000 echo -e "\x01"}${execi 1 pacman -Qu --dbpath /home/madhatter/pacman | wc -l} \
${execi 10000 echo -e "\x01"}Vol${execi 10000 echo -e "\x01"}${execi 1 /home/madhatter/bin/volume.sh} \
${execi 10000 echo -e "\x01"}${time %H:%M} \
